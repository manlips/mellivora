<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Honeypots</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div id="honeypots">

</div>

<script>
$.getJSON('json/allsensorstats.json', function(obj) {
  var html = ""
  obj.forEach( function(arrayItem) {
    html += '<div class="row">'
    html += '<div class="col-lg-12">'
    html += '<div class="panel panel-default honeypot-panel">'
    html += '<div class="panel-body">'
    html += '<div class="col-lg-2"><img src="http://maps.googleapis.com/maps/api/staticmap?center=' + arrayItem.latitude + ',' + arrayItem.longitude + '&zoom=0&scale=false&size=150x150&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0xff0000%7Clabel:1%7C' + arrayItem.latitude + ',' + arrayItem.longitude + '" alt="Google Map of 50,50"></div>'
    html += '<div class="col-lg-2 vcenter"><h3><strong>' + arrayItem.codename + '</strong></h3></div>'
    html += '<span class="col-lg-2 padded"><strong>Host: </strong>' + arrayItem.host
    html += '<br />'
    html += '<strong>IP: </strong>' + arrayItem.public_ip
    html += '<br />'
    html += '<strong>Location: </strong>' + arrayItem.city_name
    html += '</span>'
    html += '<div class="col-lg-6 padded">'
    html += '<span class="progress-label"><strong>CPU Load: </strong></span>'
    html += '<div class="progress"> <div class="progress-bar" role="progressbar" aria-valuenow="'+ arrayItem.cpuload * 100 +'" aria-valuemin="0" aria-valuemax="100" style="width: '+ arrayItem.cpuload * 100 +'%;">   <span>'+ arrayItem.cpuload * 100 +'%</span> </div></div>'
    html += '<span class="progress-label"><strong>Disk Usage: </strong></span>'
    html += '<div class="progress"> <div class="progress-bar-warning" role="progressbar" aria-valuenow="'+ arrayItem.diskutil +'" aria-valuemin="0" aria-valuemax="100" style="width: '+ arrayItem.diskutil +';">   <span>'+ arrayItem.diskutil +'</span> </div></div>'
    html += '<span class="link"><a href="' + arrayItem.config_link + '" target="_blank">Configure This Honeypot</a></span>'
    html += '</div> <!-- /.col-lg-4-->'
    html += '</div> <!-- /.panel-body -->'
    html += '</div> <!-- /.panel -->'
    html += '</div> <!-- /.col-lg-12 -->'
    html += '</div> <!-- /.row -->'
  });

  $("#honeypots").html(html);



})

</script>
