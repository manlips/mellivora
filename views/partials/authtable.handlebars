<div class="panel panel-default">
    <div class="panel-heading">
        Authentications
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="auth_datatable">
            <thead>
              <tr>
                  <th>IP</th>
                  <th>Username</th>
                  <th>Password</th>
                  <th>Timestamp</th>
              </tr>
            </thead>
          </table>
      </div>
      <!-- /.table-responsive -->

      <!-- DataTables JavaScript -->
      <script type="text/javascript" src="/datatables/DataTables-1.10.11/js/jquery.dataTables.js"></script>
      <script type="text/javascript" src="/datatables/DataTables-1.10.11/js/dataTables.bootstrap.js"></script>
      <script type="text/javascript" src="/datatables/Responsive-2.0.2/js/dataTables.responsive.js"></script>

      <script>
        $(document).ready( function () {
          $('#auth_datatable').DataTable( {
            responsive: true,
            ajax: {
              url: '/json/authtable.json',
              dataSrc: ''
            },
            "columns": [
              {"data": "ip"},
              {"data": "username"},
              {"data": "password"},
              {"data": "timestamp"}
            ]
          });
        } );
      </script>

    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->
